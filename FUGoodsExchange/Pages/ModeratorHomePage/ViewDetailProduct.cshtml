@page
@model FUGoodsExchange.Pages.ModeratorHomePage.ViewDetailProductModel
@{
    ViewData["Title"] = "Product Details";
}
<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Product Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Product.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Product.Description)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Product.Price)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Product.Price)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Product.Quantity)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Product.Quantity)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Product.DatePosted)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Product.DatePosted)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Product.Status)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Product.Status)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Product.Category)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Product.Category.CategoryName)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Product.Seller)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Product.Seller.SellerId)
                </dd>
            </dl>
        </div>
    </div>
    <div class="mt-3">
        <a asp-page="./ViewAllProductMod" class="btn btn-secondary">Back to List</a>
    </div>
</div>
