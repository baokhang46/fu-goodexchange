@page
@model FUGoodsExchange.Pages.ModeratorHomePage.ViewReportModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].ReportDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Buyer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Seller)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Report)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReportDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Buyer.BuyerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seller.SellerId)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ReportId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ReportId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ReportId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

