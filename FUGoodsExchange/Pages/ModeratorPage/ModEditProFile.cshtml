@page 
@model FUGoodsExchange.Pages.ModeratorHomePage.ModEditProFileModel
@{
    ViewData["Title"] = "Edit Profile";
}

<h1>Edit Profile</h1>

<form method="post">
    <input type="hidden" asp-for="User.UserId" /> <!-- Hidden field for UserId -->

    <input type="hidden" asp-for="User.AccountId" /> <!-- Hidden field for UserId -->
    <div class="form-group">
        <label asp-for="User.LastName"></label>
        <input asp-for="User.LastName" class="form-control" />
        <span asp-validation-for="User.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.FirstName"></label>
        <input asp-for="User.FirstName" class="form-control" />
        <span asp-validation-for="User.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.Address"></label>
        <input asp-for="User.Address" class="form-control" />
        <span asp-validation-for="User.Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
