<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FU Good Exchange</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Add other stylesheets and scripts here -->
    <style>
        /* CSS for evenly spacing navigation links */
        .navbar-list {
            display: flex;
            justify-content: space-between; /* Distributes items evenly along the flex container's main axis */
            list-style-type: none; /* Remove default list styling */
            padding: 0; /* Remove default padding */
        }

            .navbar-list li {
                margin-right: 10px; /* Adjust as needed for spacing between links */
            }
    </style>
</head>
<body>
    <header id="header">
        <div class="container">
            <nav class="navbar">
                <div class="navbar-brand">
                    <a href="/"><img src="~/images/logo.png" alt="Logo" /></a>
                </div>
                <div class="navbar-menu">
                    <ul class="navbar-list">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">About</a></li>
                        <li><a href="#">Contact</a></li>
                        <!-- Add more navigation links here -->
                    </ul>
                </div>
                <div class="navbar-search">
                    <input type="text" class="srchTxt" placeholder="Search..." />
                    <button class="btn">Go</button>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; 2024 - FU Good Exchange - <a href="/Privacy">Privacy</a></p>
    </footer>
</body>
</html>
